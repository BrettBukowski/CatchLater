<h2>Sign in</h2>
<% if alert %>
<div class='error'><%= alert %></div>
<% end %>
<%= form_tag session_path, id: 'new_session', class: 'new_session' do %>
	<div class="inputWrapper">
		<%= label_tag 'email', 'Email', class: 'screenReaderOnly' %>
		<%= email_field_tag :email, nil, placeholder: 'Your email' %>
	</div>
	<div class="inputWrapper">
		<%= label_tag 'password', 'Password', class: 'screenReaderOnly' %>
		<%= password_field_tag :password, nil, placeholder: 'Your password' %>
	</div>
	<%= submit_tag 'Sign In', data: { disable_with: 'Signing inâ€¦' } %>
<% end %>

<%= link_to "Forgot password?", forgot_password_users_path %>