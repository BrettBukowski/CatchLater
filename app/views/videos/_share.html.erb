<span class="shareDropdown hide">
	<ul>
		<li><%= window_open "Facebook", "http://www.facebook.com/sharer.php?u=#{videoUrl}", title: "Share on Facebook" %></li>
		<li><%= window_open "Twitter", "http://twitter.com/home?status=#{videoUrl}", title: "Share on Twitter" %></li>
		<li><%= window_open "Google+", "https://m.google.com/app/plus/x/?v=compose&content=#{videoUrl}", title: "Share on Google+" %></li>
		<li><%= window_open "Tumblr", "http://www.tumblr.com/share?v=3&u=" + url_encode(videoUrl), title: "Share on Tumblr" %></li>
		<li><%= mail_to "", "Email", subject: "Shared Video", body: "\n\n" + videoUrl %></li>
		<li class="source"><%= link_to truncate(videoUrl, length: 30), videoUrl, title: videoUrl, target: "_blank" %></li>
	</ul>
</span>